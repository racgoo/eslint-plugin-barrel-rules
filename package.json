{
  "name": "eslint-plugin-barrel-rules",
  "description": "Enforce barrel module pattern",
  "repository": {
    "type": "git",
    "url": "https://github.com/racgoo/eslint-plugin-barrel-rules"
  },
  "bugs": {
    "url": "https://github.com/racgoo/eslint-plugin-barrel-rules/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslint-plugin-barrel-rules",
    "barrel-module",
    "barrel pattern",
    "encapsulation directory",
    "enforce barrel pattern",
    "isolated barrel module",
    "no-wildcard"
  ],
  "version": "1.4.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "build": "pnpm run test && tsup src/index.ts --dts --format cjs,esm",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "pnpm run build && pnpm publish --access=public"
  },
  "dependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/parser": "^8.46.2",
    "@typescript-eslint/rule-tester": "^8.46.2",
    "@typescript-eslint/types": "^8.46.2",
    "@typescript-eslint/utils": "^8.36.0",
    "fast-glob": "^3.3.3",
    "jest": "^30.2.0",
    "resolve": "^1.22.10",
    "ts-jest": "^29.4.5",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@types/resolve": "^1.20.6",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3"
  }
}
