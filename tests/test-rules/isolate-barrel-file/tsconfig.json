{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node", "jest"],
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"]
    }
  },
  "include": ["**/*.ts", "../src/**/*.ts"]
}
